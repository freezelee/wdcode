<?xml version="1.0" encoding="UTF-8"?>
<templates>
	<!-- 系统设置模板 -->
	<module key="system">
		<template key="setup" title="system,setup"> 
			<node key="field" text="reset,cache" type="submit" cssClass="submit" action="system_cache_setup" value="%{getText('reset')}"/>
			<node key="field" text="reset,template" type="submit" cssClass="submit" action="system_templates_setup" value="%{getText('reset')}"/>
		</template>
		<template key="theme" title="edit,theme" action="system_themes"> 
			<node key="field" text="theme" type="select" list="themes" name="themeName" value="%{#attr.themeBack}" cssClass="select"/>
			<node key="submit" ref="submit" /> 
		</template>
	</module>
	
	<!-- 菜单模板 -->
	<module key="menu">
		<template key="add" title="add,menu" action="menu_add"> 
			<node key="field" text="menu,name" ref="textfield"  name="entity.name"/> 
			<node key="field" text="superior,menu" ref="select" id="menu" list="%{#attr.query.list('menu','menuId',0)}" listKey="id" listValue="name" name="entity.menuId" headerKey="0" headerValue="%{getText('none')}"/>
			<node key="field" text="link" ref="textfield"  name="entity.url"/> 
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,menu" action="menu_edit" ref="add"> 
			<node key="hidden" name="entity.key"/>
		</template>
		<template key="list" title="menu,list" edit="true"> 
			<node key="submit" ref="querySubmit" action="menu_page"/>	
			<node key="submit" ref="delButton" action="menu_dels"/>
			<node th="menu,name;menu,link;superior,menu" />	
			<node td="name;url;menuId"/> 
		</template>
	</module> 
	
	<!-- 操作模板 -->
	<module key="operate">
		<template key="add" title="add,operate" action="operate_add">  
			<node key="field" text="operate,name" ref="textfield"  name="entity.name"/>
			<node key="field" text="operate,link" ref="textfield"  name="entity.link"/> 
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,operate" action="operate_edit" ref="add"> 
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="operate,list" edit="true">  
			<node key="submit" ref="querySubmit" action="operate_page"/>	
			<node key="submit" ref="delButton" action="operate_dels"/>
			<node th="operate,name;operate,link" />	
			<node td="name;link"/> 
		</template>
	</module>
	 		 	
	<!-- 角色模板 -->
	<module key="role">
		<template key="add" title="add,role" action="role_add"> 
			<node key="field" text="role,name" ref="textfield"  name="entity.name"/>  
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,role" action="role_edit" ref="add">
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="role,list" edit="true">  
			<node key="submit" ref="querySubmit" action="role_page"/>	
			<node key="submit" ref="delButton" action="role_dels"/>
			<node th="role,name" />	
			<node td="name"/> 
		</template>
	</module>
	
	<!-- 操作日志模板 -->
	<module key="operateLogs">
		<template key="list" title="operate,logs,list" edit="true">
			<node key="search" text="start,date" ref="startDate"/>	
			<node key="search" text="end,date" ref="endDate"/>	
			<node key="submit" ref="querySubmit" action="operateLogs_page"/>	
			<node key="submit" ref="delButton" action="operateLogs_dels"/>
			<node key="submit" ref="trunButton" action="operateLogs_trun"/>
			<node th="user,name;oper,date;content" />	
			<node td="userId;date;content"/>			
		</template>
	</module>
	
	<!-- 管理员模板 -->
	<module key="admin">
		<template key="add" title="add,admin" action="admin_add"> 
			<node key="field" text="admin,name" ref="textfield"  name="entity.name"/> 
			<node key="field" text="admin,pwd" ref="password"  name="entity.password"/>
			<node key="field" text="state" ref="select" list="#{0:'invalid',1:'avail'}" listKey="key" listValue="%{getText(value)}"  name="entity.state" value="1"/>
			<node key="field" text="role" ref="roleList"/>  
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,admin" action="admin_edit" ref="add">
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="admin,list" edit="true"> 
			<node key="submit" ref="addSubmit" action="admin_theme_add"/>	
			<node key="submit" ref="delButton" action="admin_dels"/>
			<node th="admin,name;email;date" />	
			<node td="name;email;date"/> 
		</template>
	</module> 
</templates>