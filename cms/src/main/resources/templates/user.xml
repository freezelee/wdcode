<?xml version="1.0" encoding="UTF-8"?>
<templates>  
	<!-- 用户模板 -->
	<module key="user">
		<template key="add" title="add,user" action="user_add"> 
			<node key="field" text="user,name" ref="textfield"  name="entity.name"/> 
			<node key="field" text="user,pwd" ref="password"  name="entity.password"/> 
			<node key="field" text="email" ref="textfield"  name="entity.email"/> 
			<node key="field" text="mobile" ref="textfield"  name="entity.mobile"/>   
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,user" action="user_edit" ref="add">
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="user,list" edit="true"> 
			<node key="submit" ref="addSubmit" action="user_theme_add"/>	
			<node key="submit" ref="delButton" action="user_dels"/>
			<node th="user,name;email;date" />	
			<node td="name;email;date"/> 
		</template>
	</module>    
</templates>