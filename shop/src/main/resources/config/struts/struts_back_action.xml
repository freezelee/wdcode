<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="back" namespace="/back" extends="struts-base">        
		<!-- 全局返回 -->	
		<global-results>
			<result name="login" type="freemarker">/WEB-INF/template/back/login.ftl</result>
		</global-results> 
		 
		<!-- 进入框价页 -->
		<action name="index" class="backAction" method="index">
			<result type="redirect">/back/main.htm</result>
		</action>
		 		  
		<!-- 登录  -->
		<action name="login" class="backAction" method="login">
			<result type="redirect">/back/main.htm</result>
			<result name="input" type="freemarker">/WEB-INF/template/back/login.ftl</result>
		</action>
		 
		<!-- 登出  -->
		<action name="logout" class="backAction" method="logout">
			<result type="redirect">/back/</result>
		</action>
		
		<!-- 验证码 -->
		<action name="verify" class="backAction" method="verifyCode" />
		  
		<!-- 通用配置 -->		
		<action name="*_*_*" class="backAction" method="{2}">
			<result type="freemarker">/WEB-INF/template/back/theme.ftl</result> 
			<result name="input" type="freemarker">/WEB-INF/template/back/theme.ftl</result>
			<result name="dels" type="chain">{1}_page</result>
			<result name="list" type="freemarker">/WEB-INF/template/back/list.ftl</result> 
		</action>   
		<action name="*" class="backAction" method="main">
			<result type="freemarker">/WEB-INF/template/back/{1}.ftl</result>
		</action> 
	</package>
</struts>