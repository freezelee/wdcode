<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="shop" extends="struts-base">
		<!-- 全局返回 -->	
		<global-results>
			<result name="login">/WEB-INF/template/shop/login.ftl</result>
		</global-results>
			
		<!-- 主页-->
		<action name="index" class="shopAction">
			<result type="freemarker">/WEB-INF/template/shop/index.ftl</result>
		</action> 	
		<!-- 登录 -->
		<action name="login" class="shopAction" method="login">
			<result>/</result>
		</action> 		
		<!-- 验证码  -->
		<action name="verify" class="shopAction" method="verifyCode"/>
		<!-- 登出  -->
		<action name="logout" class="shopAction" method="logout">
			<result type="redirect">/</result>
		</action>
		<!-- 注册 -->
		<action name="register" class="userAction" method="register">
			<result type="freemarker">/WEB-INF/template/shop/index.ftl</result>
		</action> 	 
		<!-- 订单 -->
		<action name="orderAdd" class="shopAction" method="orderAdd">
			<result type="freemarker">/WEB-INF/template/shop/orders_result.ftl</result>
		</action> 	 
		<action name="orderPay" class="shopAction" method="orderPay">
			<result type="freemarker">/WEB-INF/template/shop/orders_pay.ftl</result>
		</action> 	
		<action name="orderTrade" class="shopAction" method="orderTrade">
			<result type="freemarker">/WEB-INF/template/shop/orders_trade.ftl</result>
		</action> 	
		 
		<!-- 通用配置 -->
		<action name="*_*_*" class="shopAction" method="{2}">
			<result type="freemarker">/WEB-INF/template/shop/${module}_${mode}.ftl</result>
			<result name="list" type="freemarker">/WEB-INF/template/shop/${module}_${mode}.ftl</result>
		</action> 
	</package>
</struts>