<?xml version="1.0" encoding="UTF-8"?>
<templates>  	 
	<!-- 配送方式模板 -->
	<module key="dispatch">
		<template key="add" title="add,dispatch" action="dispatch_add"> 
			<node key="field" text="dispatch,name" ref="textfield"  name="entity.name"/>  
			<node key="field" text="dispatch,corp" ref="corpList"/>
			<node key="field" text="first,weight" ref="textfield"  name="entity.firstWeight"/>
			<node key="field" text="last,weight" ref="textfield"  name="entity.lastWeight"/>
			<node key="field" text="first,price" ref="textfield"  name="entity.firstPrice"/>
			<node key="field" text="last,price" ref="textfield"  name="entity.lastPrice"/>
			<node key="field" text="detail" ref="editor" name="entity.detail"/> 
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,dispatch" action="dispatch_edit" ref="add">			
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="dispatch,list" edit="true"> 
			<node key="submit" ref="addSubmit" action="dispatch_theme_add"/>	
			<node key="submit" ref="delButton" action="dispatch_dels"/>
			<node th="dispatch,name;first,weight;last,weight;first,price;last,price" />	
			<node td="name;firstWeight;lastWeight;firstPrice;lastPrice"/> 
		</template>
	</module>
 
	<!-- 地区模板 -->
	<module key="area">
		<template key="add" title="add,area" action="area_add">
			<node key="field" type="hidden" name="entity.areaId" value="%{#attr.entity.id}"/> 
			<node key="field" text="superior,area" type="none" default="一级地区" value="#attr.entity.name"/>
			<node key="field" text="area,name" ref="textfield" name="entity.name" value=""/>
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,area" action="area_edit">  
			<node key="hidden" name="entity.key"/>
			<node key="field" text="superior,area" type="none" default="一级地区" value="#attr.query.get('area',#attr.entity.areaId).name"/>  
			<node key="field" text="area,name" ref="textfield"  name="entity.name"/>
			<node key="submit" ref="submit" />
		</template>
		<template key="list" url="area.ftl" title="area,list"> 
			<node key="submit" ref="addSubmit" action="area_theme_add"/>
		</template>
	</module> 
	
	<!-- 公司模板 -->
	<module key="corp">
		<template key="add" title="add,corp" action="corp_add">  
			<node key="field" text="corp,name" ref="textfield" name="entity.name"/> 
			<node key="field" text="corp,webSite" ref="textfield" name="entity.url"/>  
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,corp" action="corp_edit" ref="add">  
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="corp,list" edit="true"> 
			<node key="submit" ref="addSubmit" action="corp_theme_add"/>	
			<node key="submit" ref="delButton" action="corp_dels"/>
			<node th="corp,name;corp,url" />	
			<node td="name;url"/> 
		</template>
	</module>
	
	<!-- 在线客服 -->
	<module key="customer">
		<template key="add" title="add,customer" action="customer_add">  
			<node key="field" text="customer,name" ref="textfield" name="entity.name"/> 
			<node key="field" text="customer,type" ref="textfield" name="entity.type"/> 
			<node key="field" text="customer,contact" ref="textfield" name="entity.contact"/>  
			<node key="submit" ref="submit" />
		</template>
		<template key="edit" title="edit,customer" action="customer_edit" ref="add">  
			<node key="hidden" name="entity.key"/> 
		</template>
		<template key="list" title="customer,list" edit="true"> 
			<node key="submit" ref="addSubmit" action="customer_theme_add"/>	
			<node key="submit" ref="delButton" action="customer_dels"/>
			<node th="customer,name;customer,type;customer,contact" />	
			<node td="name;type;contact"/> 
		</template>
	</module>
	
	<!-- 物品订单模板 -->
	<module key="orders">
		<template key="list" title="goods,order,list" edit="true"> 
			<node th="order,name;type;goods,id;user,id;rmb;price;count;pay,type;buy,user,id;buy,ip;date;pay,date;open,date;state;detail" />	
			<node td="name;type;userId;rmb;price;count;payType;buyUserId;buyIp;date;payDate;openDate;%{getText(#{0:'invalid',1:'avail'}.get('status'))};;detail"/>
		</template>
	</module>  
	
	<!-- 缺货模板 -->
	<module key="notify">
		<template key="list" title="notify,list"> 
			<node th="name;user;email;time"/>	
			<node td="goodsId;userId;email;date"/>
		</template>
	</module>   
</templates>